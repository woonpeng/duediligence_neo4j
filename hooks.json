[
  {
    "id": "purge-db",
    "execute-command": "bin/purge-and-backup.sh",
    "command-working-directory": "/var/lib/neo4j",
    "include-command-output-in-response": true,
    "trigger-rule-mismatch-http-response-code": 403,
    "trigger-rule":
    {

      "and":
      [
        {
          "match":
          {
            "type": "payload-hash-sha256",
            "secret": "",
            "parameter":
            {
              "source": "header",
              "name": "X-Hub-Signature"
            }
          }
        } 
      ] 
    
    } 
  }
]
